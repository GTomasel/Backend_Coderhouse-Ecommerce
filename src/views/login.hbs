<div class="d-flex flex-column align-items-center my-5 py-5">

    <h2>Login</h2>

    <form class="form mt-3" role="form" action="/login" method="post" autocomplete="off">

        <div class="form-group">
            <input name='email' placeholder="Email" class="form-control" type="text" required>
        </div>
        <div class="form-group mt-1">
            <input name='password' placeholder="Password" class="form-control" type="password" required>
        </div>

        <div class="form-group d-flex">
            <input class="btn btn-success my-3 mx-auto" type="submit" value="Login">
        </div>
    </form>

    <div class="text-center"></div>
    <button class="btn btn-primary my-3" onclick="goTo('/signup')">Registrarse</button>

</div>