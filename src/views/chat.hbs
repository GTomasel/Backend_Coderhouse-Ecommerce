<div class="d-flex flex-column mt-5 w-50 mx-auto">
    <h3 class="mb-3 align-self-center">Centro de Mensajes</h3>
    <p class="align-self-center text-muted mb-1"><span id="userName">{{userData.username}}</span> (<span
            id="userID">{{userData.userCartId}}</span>)</p>

    <div id="chat-container">
        <div id="chat-window">
            <div id="chat-output"></div>
            <div id="chat-actions"></div>
        </div>
        <div>
            {{#if userData.admin}}
            <input class="w-100" type="text" id="to-input" placeholder="Email del usuario al que quiere responder">
            {{/if}}
            <input type="text" id="chat-input" placeholder="Escriba su mensaje">
            <button class="btn btn-outline-dark w-100" id="chat-send">Enviar</button>
        </div>
    </div>

</div>

<form class="form" role="form" action="/index" method="get" autocomplete="off">
    <div class="form-group d-flex">
        <input class="btn btn-outline-dark mx-auto" type="submit" value="Volver">
    </div>
</form>